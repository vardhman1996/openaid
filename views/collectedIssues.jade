extend layout

block content
    div#Issues
        h1#SearchHeader Stuff to work on!
        form(action="localhost:3000/repos", method="post")
            each issue in issues
                label
                    div.optionSection
                        div.title
                            a(href="#{issue.html_url}") #{issue.title}
                        br
                        div.description #{issue.body}
                        div#input
                            //input.check(type="checkbox" name='repo' value='#{issue}')
            else
                p "Sorry, we didn't find any repositories."
